extends ../layout

block content
    section#main.column
      .clear
      article.module.width_full
        form(action='/editCategory/#{category.idgrupos_problemas}', method='POST')
            header
              h3 Edit Category
            .module_content
              fieldset
                label Category Name
                input(type='text', name='categoryName', value='#{category.name}')
              fieldset
                label Category Description
                textarea(rows='12', name='description') #{category.desc}
              .clear
            footer
              .submit_link
                input.alt_btn(type='submit', value='Submit')
                input(type='submit', value='Reset')
      //
         end of post new article 
      .spacer